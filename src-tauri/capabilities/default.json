{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "log:allow-log",
    "log:default",
    "opener:default",
    "opener:allow-open-path",
    "dialog:default",
    "fs:default",
    "fs:allow-cache-read",
    "fs:allow-cache-write",
    "fs:allow-app-read",
    "fs:allow-app-write",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    "os:default",
    "android-fs:all-without-delete"
  ]
}